<%= form_tag(games_path, {class: 'form-horizontal', role: 'form', method: :post}) do %>

    <div class="form-group">
      <%= label_tag :name, nil, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-5">
        <%= text_field_tag :name, nil, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag :game, nil, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-5">
        <%= text_field_tag :id, nil, :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <!--<button type="submit" class="btn btn-default">Sign in</button>-->
        <%= submit_tag 'Join Game', :class => 'btn btn-primary' %>
      </div>
    </div>

<% end %>

